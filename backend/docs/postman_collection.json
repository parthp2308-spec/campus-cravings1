{
  "info": {
    "name": "Campus Cravings API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000/api" },
    { "key": "token", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "restaurantId", "value": "11111111-1111-4111-8111-111111111111" },
    { "key": "orderId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Student Demo\",\n  \"email\": \"student2@uconn.edu\",\n  \"password\": \"Password123!\",\n  \"role\": \"student\"\n}"
        }
      }
    },
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student@uconn.edu\",\n  \"password\": \"Password123!\"\n}"
        }
      }
    },
    {
      "name": "Get Restaurants",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/restaurants"
      }
    },
    {
      "name": "Get Restaurant Menu",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/restaurants/{{restaurantId}}/menu"
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/orders",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"restaurantId\": \"11111111-1111-4111-8111-111111111111\",\n  \"items\": [\n    {\n      \"menuItemId\": \"a1111111-1111-4111-8111-111111111111\",\n      \"quantity\": 2\n    }\n  ]\n}"
        }
      }
    },
    {
      "name": "Create Stripe Checkout Session",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/payments/checkout-session",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
        }
      }
    }
  ]
}
